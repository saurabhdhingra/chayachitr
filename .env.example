# Server Configuration
PORT=8080
ENV=development

# Storage Configuration
# Options: minio, s3
STORAGE_TYPE=minio

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
DB_NAME=chayachitr

# JWT Configuration
JWT_SECRET=your_secret_key_replace_this_in_production
JWT_EXPIRATION=24h

# MinIO Configuration (Object Storage) - Used when STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=chayachitr-images

# AWS S3 Configuration - Used when STORAGE_TYPE=s3
S3_ACCESS_KEY=your_aws_access_key
S3_SECRET_KEY=your_aws_secret_key
S3_REGION=us-east-1
S3_BUCKET_NAME=your-chayachitr-bucket 